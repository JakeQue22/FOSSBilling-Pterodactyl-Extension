<h1>Pterodactyl Module Configuration</h1>
<form action="{{ url('admin/servicepterodactyl/config') }}" method="post">
    <div class="form-group">
        <label for="pterodactyl_url">Pterodactyl Panel URL</label>
        <input type="text" class="form-control" id="pterodactyl_url" name="pterodactyl_url" value="{{ config.pterodactyl_url }}" required>
    </div>
    <div class="form-group">
        <label for="pterodactyl_api_key">Pterodactyl API Key</label>
        <input type="password" class="form-control" id="pterodactyl_api_key" name="pterodactyl_api_key" value="{{ config.pterodactyl_api_key }}" required>
    </div>
    <button type="submit" class="btn btn-primary">Save Configuration</button>
</form>
